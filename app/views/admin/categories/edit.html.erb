<h1>Editing Category</h1>

<%= form_with model: @category, url: admin_category_path(@category) do |f| %>
<div class="field">
  <label for="category_name">Name</label>
  <%= f.text_field :name %>
</div>
<div class="actions">
  <%= f.submit 'カテゴリーを更新' %>
</div>
<% end %>

<%= link_to "Back", admin_categories_path %>
